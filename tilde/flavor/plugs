" collection of plugins for vim
call plug#begin('~/.vim/plugged')

" current theme
Plug 'vim-airline/vim-airline'
Plug 'joshdick/onedark.vim'

" the NerdTree plugin to use a type of file explorer
Plug 'scrooloose/nerdtree'
Plug 'ryanoasis/vim-devicons'

" MD preview
Plug 'iamcco/markdown-preview.nvim', { 'do': 'cd app & yarn install'  }

" wakatime plugin to track coding activity
Plug 'wakatime/vim-wakatime'

" allow for nice spacing during reading
Plug 'junegunn/goyo.vim'

" language server client'
Plug 'neoclide/coc.nvim', {'do': 'yarn install --frozen-lockfile'}
"Plug 'neoclide/coc.nvim', {'branch': 'release'}

" git related plugins
Plug 'tpope/vim-fugitive'
Plug 'airblade/vim-gitgutter'

" language specific syntax plugin
Plug 'sheerun/vim-polyglot'

" ndtl
Plug 'ckipp01/vim-indental'

" help visualize spacing
Plug 'Yggdroot/indentLine'

Plug 'tpope/vim-scriptease'

" common settings for nvim-lsp
Plug 'neovim/nvim-lsp'

call plug#end()
